<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="inventarioTMP.TabbedPage1">
  <!--Pages can be added as references or inline-->
    <ContentPage Title="Listado" >
        
        <ListView x:Name="listaBodegas">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding nombre}"
                              Detail="{Binding direccion}"
                              TextColor="DarkGreen"
                              DetailColor="Gray" />

                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        
    </ContentPage>
    <ContentPage Title="Crear Nueva" >
        <StackLayout VerticalOptions="StartAndExpand" HorizontalOptions="Fill" Padding="10,30" >
            <Entry Placeholder="Nombre de bodega:" x:Name="txtNombre"  />
            <Entry Placeholder="Descripción de bodega:" x:Name="txtDescripcion" />
            <Entry Placeholder="Dirección de bodega:" x:Name="txtDireccion" />
            <Button Text="Crear" BackgroundColor="LightSeaGreen" x:Name="btnGuardar" Clicked="btnGuardar_Clicked" Margin="0,30"/>
            <Button Text="Cancelar" x:Name="btnCancelar" Clicked="btnCancelar_Clicked"/>
        </StackLayout>
    </ContentPage>
</TabbedPage>