<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="inventarioTMP.MainPage">

    <StackLayout HorizontalOptions="Center" Padding="15" >
        
        <Label Text="Bienvenido" FontSize="Title" Padding="30,10,30,10"/>
        <Label Text="Para acceder al sistema ingrese sus credenciales." FontSize="16" Padding="30,10,30,10"/>

        <Entry Placeholder="Usuario:" x:Name="txtUsuario" />
        <Entry Placeholder="Contraseña:" x:Name="txtContrasena" IsPassword="true"/>
        <Button Text="Ingresar" BackgroundColor="LightSeaGreen" x:Name="btnLogin" Clicked="btnLogin_Clicked"/>
        <Image Source="bodega.png" Aspect="AspectFit" Margin="30,30,30,30"  HeightRequest="100" />

    </StackLayout>

</ContentPage>
